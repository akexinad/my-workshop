  
# EditorConfig is awesome: http://EditorConfig.org
# This file specifies some default suggestions for your editor to follow.
# It is completely independent from linters/formatters.
# top-most EditorConfig file
root = true
# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
# Matches multiple files with brace expansion notation
[*.{htm,html,yml,json,js,jsx,ts,tsx,rb}]
charset = utf-8
indent_style = space
indent_size = 4